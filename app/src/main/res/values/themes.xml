<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.markneur" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_ghost_markneur</item>
        <item name="colorPrimaryVariant">@color/orange_markneur_100</item>
        <item name="colorOnPrimary">@color/orange_markneur_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_markneur_300</item>
        <item name="colorSecondaryVariant">@color/blue_markneur_100</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/orange_markneur_100</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/black</item>
    </style>
</resources>